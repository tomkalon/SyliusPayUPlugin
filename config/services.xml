<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="services/*.xml"/>
    </imports>

    <parameters>
        <parameter key="bitbag_open_payu_cache_dir">%kernel.project_dir%/var/cache/%env(APP_ENV)%</parameter>
    </parameters>

    <services>
        <defaults public="false" autoconfigure="false" autowire="false"/>

        <service
                class="BitBag\SyliusPayUPlugin\EventListener\PayUResponseExceptionEventListener"
                id="bitbag.sylius_payu_plugin.listener.payu_exception_listener"
        >
            <argument type="service" id="router" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="logger"/>
            <tag name="kernel.event_listener" event="kernel.exception" method="onPayuOpenException" />
        </service>

        <service id="bitbag.sylius_payu_plugin.command_provider.sylius_payment"
                 class="Sylius\Bundle\PaymentBundle\Provider\ActionsHttpResponseProvider">
            <argument type="tagged_locator"
                      tag="bitbag.sylius_payu_plugin.command_provider.sylius_payment"
                      index-by="action"/>
            <tag name="sylius.payment_request.provider.http_response"
                 gateway-factory="sylius_payment"/>
        </service>

        <service id="bitbag.sylius_payu_plugin.command_provider.sylius_payment.capture"
                 class="BitBag\SyliusPayUPlugin\CommandProvider\CapturePaymentRequestCommandProvider">
            <tag name="bitbag.sylius_payu_plugin.command_provider.sylius_payment"
                 action="capture"/>
        </service>

        <service id="bitbag.sylius_payu_plugin.provider.order_pay.http_response.sylius_payment"
                 class="Sylius\Bundle\PaymentBundle\Provider\ActionsHttpResponseProvider">
            <argument type="tagged_locator"
                      tag="bitbag.sylius_payu_plugin.provider.http_response.sylius_payment"
                      index-by="action"/>
            <tag name="sylius.payment_request.provider.http_response"
                 gateway-factory="sylius_payment"/>
        </service>
    </services>
</container>
