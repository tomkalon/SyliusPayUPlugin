<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <defaults public="true" autoconfigure="false" autowire="false"/>

        <service id="bitbag.payu_plugin.command_provider.payu_payment"
                 class="Sylius\Bundle\PaymentBundle\CommandProvider\ActionsCommandProvider">
            <argument type="tagged_locator" tag="bitbag.payu_plugin.command_provider.payu_payment" index-by="action"/>
            <tag name="sylius.payment_request.command_provider" gateway-factory="payu_payment"/>
        </service>

        <service id="bitbag.payu_plugin.command_provider.payu_payment.capture"
                 class="BitBag\SyliusPayUPlugin\CommandProvider\CapturePaymentRequestCommandProvider">
            <tag name="bitbag.payu_plugin.command_provider.payu_payment" action="capture"/>
        </service>

        <service id="bitbag.payu_plugin.command_provider.payu_payment.status"
                 class="BitBag\SyliusPayUPlugin\CommandProvider\PaymentStatusCommandProvider">
            <tag name="bitbag.payu_plugin.command_provider.payu_payment" action="status" />
        </service>

    </services>
</container>
